<Window x:Class="LogicLyric.MVM.View.Dialog"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="300"
        Height="160"
     
        Title="Input Box" >
    <StackPanel>
        <TextBlock Text="Enter ipv4 Addy:" />
        <TextBox x:Name="textBox" />
        <StackPanel Orientation="Horizontal" Margin="0,40,0,0">
            <Button Content="Yes" Width="50" Height="50" IsDefault="True" Click="YesButton_Click" Margin="0,0,20,0" />
            <Button Content="No"  Width="50" Height="50"  IsCancel="True" Click="NoButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
